{
  "name": "taskflow-case-study",
  "version": "1.0.0",
  "description": "TaskFlow task management board - AI collaboration case study",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:client": "live-server frontend --port=8080 --host=localhost",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint backend frontend/js --ext .js",
    "format": "prettier --write backend frontend/js --config .prettierrc",
    "validate": "npm run lint && npm run test",
    "setup": "npm install && npm run validate"
  },
  "keywords": [
    "task-management",
    "kanban",
    "ai-collaboration",
    "education",
    "vanilla-javascript",
    "express",
    "rest-api"
  ],
  "author": "Vibe Coding Case Study",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prasann/vibe-coding-case-study.git"
  },
  "bugs": {
